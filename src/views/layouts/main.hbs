<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>{{title}}</title>
  </head>
  <body>
    <div class="flex flex-col items-center w-full gap-6">
      <nav
        class="bg-white w-full grid grid-cols-2 sm:grid-cols-3 items-center p-3 shadow sticky top-0"
      >
        <a href="/" class="text-xl font-bold hidden sm:block"><span
            class="text-sm italic"
          >Micro</span>blog</a>
        <form
          action="/"
          method="get"
          class="flex justify-center items-center self-center gap-1"
        >
          <input
            name="search"
            class="p-2 max-w-full border border-gray-300 rounded-md"
            placeholder="Search posts"
          />
        </form>
        <p class="text-right">Logged in as
          <a
            href="/me"
            class="text-blue-500 underline"
          >{{currentUser.username}}</a></p>
      </nav>
      {{{body}}}
    </div>
  </body>
</html>