<div class="flex flex-col items-center gap-4 p-4 w-full">
  <form
    id="edit-form"
    class="flex flex-col w-full md:w-2xl border border-gray-300 rounded-md p-4 gap-2"
  >
    <img class="p-4 overflow-hidden" src="/{{existingPost.attachment}}" />
    <input
      class="border border-gray-300 rounded p-2"
      type="file"
      name="attachment"
      accept="image/*"
    />
    <input
      value="{{existingPost.title}}"
      name="title"
      placeholder="Title"
      class="p-2"
    />
    <textarea
      name="content"
      placeholder="What's on your mind?"
      class="p-2 h-72"
    >{{existingPost.content}}</textarea>
    {{#if error}}
      <p class="text-red-500">{{error}}</p>
    {{/if}}
    <button
      type="button"
      class="p-2 border border-gray-300 rounded cursor-pointer"
      onclick="window.location.href = '/'"
    >Cancel</button>
    <button type="submit" class="p-2 bg-gray-300 rounded cursor-pointer">Edit
      Post</button>
  </form>
</div>

<script>
  window.__POST_DATA__ =
  {{{json existingPost}}}
</script>
<script src="/js/editPost.js"></script>